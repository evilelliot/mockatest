<div class="container" style="margin-top: 25vh;">
    <h1 class="text-center">Tu</h1>
    <div class="container" style="border-radius: 5px; border: 1px solid black;">
        <p>
            <span class="text-danger">Nombre: </span> {{person.first_name}} {{person.last_name}}
        </p>
        <p>
            <span class="text-danger">Email: </span> {{person.email}}
        </p>
        <p>
            <span class="text-danger">Gender: </span> {{person.gender}}
        </p>
        <p>
            <span class="text-danger">IP: </span> {{person.ip_address}}
        </p>
    </div>
    <div class="row" style="margin-top: 20px;">
        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
            <button class="btn btn-success btn-block" onclick="location.href = '/new';">Rehacer</button>
        </div>
        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
            <button class="btn btn-danger btn-block" onclick="location.href = '/';">Regresar</button>
        </div>
    </div>
</div>